{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "compileOnSave": false
}